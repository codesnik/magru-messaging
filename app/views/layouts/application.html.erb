<!DOCTYPE html>
<html>
<head>
  <title><%= controller.class.name %>: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'scaffold' %>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="container">
<%= link_to_unless_current 'Users', users_path %>
<%= link_to_unless_current 'Messages', messages_path %>

<div id="auth">
<% if current_user %>
  logged in as <%= current_user.name %>.
  <%= link_to 'logout', logout_users_path, :method => :delete %>
<% end %>
</div>

<div id="flash">
  <% if notice.present? %> <p class="notice"><%= notice %></p> <% end %>
  <% if alert.present? %> <p class="alert"><%= alert %></p> <% end %>
</div>

  <%= yield %>

</div>
</body>
</html>
