<h1><%= @message.thread_subject %></h1>

<% for message in @message.full_thread %>

  <p>
    <%= message_from_to message %>,
    <%= message_unread_mark message %>
    <%= message_timestamp message %>
  </p>

  <h3><%= message.subject %></h3>

  <p>
    <%= message.body %>
  </p>

  <% if allowed_to_change?(message) %>
    <%= link_to 'Edit', edit_message_path(message) %> |
    <%= link_to 'Destroy', message_path(message), :method => :delete, :confirm => "Are you sure?" %>
  <% end %>
  <hr>

<% end %>

<%= link_to 'Back', messages_path %>
