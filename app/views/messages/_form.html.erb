<% form_for(@message) do |f| %>
  <%= f.error_messages %>

  <div class="field">
  <% if @message.thread_starter? %>
      <%= f.label :recipient %><br />
      <%= f.select :recipient_id, message_recipient_options(@message), :include_blank => '-- выберите --' %>
  <% else %>
      <%= f.label :recipient %> <%= @message.recipient.name %>
      <%= f.hidden_field :recipient_id %>
  <% end %>
  </div>

  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <%= f.hidden_field :parent_id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
