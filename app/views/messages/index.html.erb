<h1>Список сообщений</h1>

<%= link_to 'Новое сообщение', new_message_path %>

<table>

<% @threads.each do |thread| %>
  <% if thread.thread_unread_by?(current_user) %>
    <tr class="has_new_messages">
  <% else %>
    <tr>
  <% end %>
    <td><%= message_from_to thread %> <%= thread_unread_counter thread %></td>
    <td><%= thread_excerpt thread %></td>
    <td><%= message_timestamp thread %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @threads %>
